---
import CocktailCard from "./CocktailCard.astro"
---

<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold mb-4">Cocktails</h1>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <CocktailCard 
      name="Margarita"
      image="/images/margarita.jpg" 
      description="Classic tequila cocktail"
    />
    <CocktailCard 
      name="Mojito"
      image="/images/mojito.jpg" 
      description="Refreshing rum cocktail" 
    />
    <CocktailCard 
      name="Cosmopolitan"
      image="/images/cosmopolitan.jpg" 
      description="Vodka based cocktail"
    />
  </div>
  <div class="mt-8">
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Create</button>
        <button class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded ml-2">Read</button>
        <button class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded ml-2">Update</button>
        <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded ml-2">Delete</button>
  </div>
</div>
